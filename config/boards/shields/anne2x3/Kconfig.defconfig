# config/boards/shields/anne2x3/Kconfig.defconfig

if SHIELD_ANNE2X3

  # 1) Habilitar Bluetooth en Zephyr/ZMK
  config BT
    default y
    # type: bool (implícito por 'default y')

  config BT_PERIPHERAL
    default y
    # type: bool (implícito)

  # 2) Habilitar a ZMK como teclado BLE
  config ZMK_BLE
    default y
    # type: bool (implícito)

  config ZMK_BLE_CLEAR_BONDS_ON_START
    default y
    # type: bool (implícito)

  # 3) Definir el nombre que se verá en publicidad BLE
  config ZMK_KEYBOARD_NAME
    string # Añadido tipo
    default "anne2x3"

  # 4) (Opcional) Servicio de batería por BLE
  # config BT_BAS
  #   default y

  # --- Configuración RGB ---
  config ZMK_RGB_UNDERGLOW
    default y
    # type: bool (implícito)

  # Habilitar el periférico SPI de Zephyr
  config SPI
    default y
    # type: bool (implícito)

  # Habilitar el driver específico WS2812 vía SPI
  # Si WS2812_STRIP_SPI es un símbolo que selecciona un backend para ZMK_RGB_UNDERGLOW,
  # a veces es mejor que ZMK_RGB_UNDERGLOW lo "select" o que la opción
  # que define el tipo de tira (como una elección global) se configure.
  # Por ahora, mantener default y es la forma más directa si no está en un 'choice' problemático.
  config WS2812_STRIP_SPI
    default y
    # type: bool (implícito)

  # Configuración inicial de color
  config ZMK_RGB_UNDERGLOW_COLOR_HSB_HUE_STARTUP
    int "Initial Hue for RGB Underglow (0-255)" # Añadido tipo y descripción
    default 85
  config ZMK_RGB_UNDERGLOW_COLOR_HSB_SAT_STARTUP
    int "Initial Saturation for RGB Underglow (0-255)" # Añadido tipo y descripción
    default 255
  config ZMK_RGB_UNDERGLOW_COLOR_HSB_BRT_STARTUP
    int "Initial Brightness for RGB Underglow (0-255)" # Añadido tipo y descripción
    default 128
  config ZMK_RGB_UNDERGLOW_CURRENT_EFFECT_STARTUP
    int "Initial Effect for RGB Underglow (index)" # Añadido tipo y descripción
    default 0

  # --- Fin de la configuración RGB ---

endif